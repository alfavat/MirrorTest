<?xml version="1.0" encoding="utf-8" ?>

<log4net debug="true">
  <appender name="JsonFileLogger" type="log4net.Appender.FileAppender,log4net">
    <file value="C://Log//log.json" />
    <layout type="Core.CrossCuttingConcerns.Logging.Log4Net.Layouts.JsonLayout, Core" ></layout>
  </appender>
  <appender name="DatabaseLogger" type="MicroKnights.Logging.AdoNetAppender, MicroKnights.Log4NetAdoNetAppender">
    <bufferSize value="1" />
    <connectionType value="Npgsql.NpgsqlConnection, Npgsql" />
    <connectionString value="Host=51.254.57.74;Database=db_milligazete;Username=user_milligazete;Password=milligazete343600!" />
    <commandText value="INSERT INTO public.log(user_id, detail, audit, method_name, class_name, created_at) VALUES (@userId,@logDetail,@audit,@methodName,@className,@log_date)" />
    <parameter>
      <parameterName value="@logDetail" />
      <dbType value="String" />
      <size value="40000" />
      <layout type="Core.CrossCuttingConcerns.Logging.Log4Net.Layouts.JsonLayout, Core" />
    </parameter>
    <parameter>
      <parameterName value="@audit" />
      <dbType value="String" />
      <size value="50" />
      <layout type="log4net.Layout.PatternLayout" value="%level" />
    </parameter>
    <parameter>
      <parameterName value="@userId" />
      <dbType value="Int32" />
      <size value="32" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="userId" />
      </layout>
    </parameter>

    <parameter>
      <parameterName value="@log_date" />
      <dbType value="DateTime" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="log_date" />
      </layout>
    </parameter>

    <!--<parameter>
    <parameterName value="@log_date" />
    <dbType value="DateTime" />
    <layout type="log4net.Layout.PatternLayout" value="%date{dd'-'MM'-'yyyy HH':'mm':'ss'.'fff}" />
    </parameter>-->

    <parameter>
      <parameterName value="@methodName" />
      <dbType value="String" />
      <size value="100" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="methodName" />
      </layout>
    </parameter>

    <parameter>
      <parameterName value="@className" />
      <dbType value="String" />
      <size value="100" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="className" />
      </layout>
    </parameter>
  </appender>

  <root>
    <level value="DEBUG"/>
    <!--<appender-ref ref="JsonFileLogger"/>-->
    <appender-ref ref="DatabaseLogger"/>
  </root>

  <!--<logger name="JsonFileLogger">
    <level value="ALL" />
    <appender-ref ref="JsonFileLogger" />
  </logger>

  <logger name="DatabaseLogger">
    <level value="ALL" />
    <appender-ref ref="DatabaseLogger" />
  </logger>-->

</log4net>