@model AuthorWithDetailsDto
@{
    ViewData["Title"] = Model?.NameSurename + " - " + @Translator.GetByKey("ProjectName");
    ViewData["Description"] = Model?.Url;
    ViewData["Keywords"] = Model?.SeoKeywords;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card:hover{
        text-decoration: none;
    }

    .article-date{
        font-size: 14px;
        color: #808080;
    }
</style>
@if (Model != null)
{
    <section id="main">
        <div class="container">

            @* Reklam Alanı:
                <div class="top-banner text-center mb14 hidden-xs"><img src="http://placehold.it/970x250" class="img-responsive m0a"></div>
            *@

            <div class="row mt-3">
                <div class="col-md-3">

                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="@Model.PhotoFile?.FileName" alt="@Model.NameSurename" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Model.NameSurename</h4>
                                    <a href="@Model.Twitter" target="_blank"><img src="~/images/icon-twitter.png" style="width:32px;" /></a>
                                    <a href="@Model.Instagram" target="_blank"><img src="~/images/icon-instagram.png" style="width:32px;" /></a>
                                    <a href="http://@Model.Web" target="_blank"><img src="~/images/icon-website-48.png" style="width:32px;" /></a>
                                    <a href="mailto:@Model.Email" target="_blank"><img src="~/images/icon-mail-48.png" style="width:32px;" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix" style="margin-bottom:50px;"></div>

                </div>
                <div class="col-md-9">
                    <!--right col-->
                    <h5>
                        @Translator.GetByKey("AboutAuthor")
                    </h5>
                    <div>
                        @Html.Raw(Model.HtmlBiography)
                    </div>
                    <div>
                        <hr />
                    </div>
                    <h5>
                        @Translator.GetByKey("AllArticles")
                    </h5>

                    <div class="clearfix"></div>

                    <div class="column-big-articles-wrapper">

                        @if (Model.ArticleList.HasValue())
                        {
                            @foreach (var item in Model.ArticleList)
                            {
                                <a href="@(item.Url)" class="card mt-1">
                                    <div class="card-body">
                                        <div class="article-title">@item.Title</div>
                                        @if (item.PublishDate.HasValue)
                                        {
                                            <div class="article-date">
                                                @item.PublishDate.Value.ToString("dd/MM/yyyy")
                                            </div>
                                        }
                                    </div>
                                </a>
                            }
                        }

                        <div class="clearfix"></div>

                    </div>

                    @*
                        <!-- page nav -->
                        <nav aria-label="Page navigation" class="text-center">
                            <ul class="pagination">
                                <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                                <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li>
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <!-- page nav end -->
                        <!--right col end-->
                    *@
                </div>
            </div>

        </div>

    </section>
}