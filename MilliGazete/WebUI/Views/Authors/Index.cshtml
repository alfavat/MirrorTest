                                        <div class="card-text">
                                            @item.LastArticleTitle
                                        </div>
                                    </div>
                                </div>
                            </a>*@

                            <div class="col-md-3 author-card">
                                <div class="card card-profile">
                                    <div class="card-avatar">
                                        <a href="~/yazar/@item.Url" target="_blank">
                                            <img class="img" src="@item.PhotoFile?.FileName">
                                        </a>
                                    </div>
                                    <div class="card-body ">
                                        <div class="card-title-box">
                                            <a href="~/yazar/@item.Url" class="card-title">@item.NameSurename</a>
                                        </div>
                                        <div class="card-description-box">
                                            <a href="@item.LastArticleUrl" class="card-description" target="_blank">
                                                @item.LastArticleTitle
