@model List<AuthorDto>
@{
    if (Model.HasValue())
    {
        ViewData["Title"] = @Translator.GetByKey("Authors") + " - " + @Translator.GetByKey("ProjectName");
        ViewData["Description"] = @Translator.GetByKey("Authors");
        ViewData["Keywords"] = @Translator.GetByKey("Authors");
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<style>
    .author-box {
        margin-bottom: 20px;
        text-decoration: none !important;
        color: #555 !important;
    }

    .author-box:hover {
        text-decoration: none !important;
        color: #000 !important;
    }

    .author-box .card-block {
        padding: 10px;
    }

    .author-box .card-text{
        overflow: hidden;
        text-overflow: ellipsis;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        display: -webkit-box;
    }


</style>

@if (Model.HasValue())
{
    <section id="main">
        <div class="container">
            <!-- author list  -->
            <h1>
                @Translator.GetByKey("Authors")
            </h1>

            <div class="author-list">
                <div class="row">
                    @if (Model.HasValue())
                    {
                        foreach (var item in Model)
                        {
                            @*<a href="~/yazar/@item.Url.ToUrlFormat()" class="col-md-3 col-6 author-box">
                                <div class="card">
                                    <img class="card-img-top" src="@item.PhotoFile?.FileName" style="width:100%;height:220px;" />
