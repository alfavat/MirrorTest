@model TagNews
@{
    ViewData["Title"] = Html.Raw(Model.Tag) + " - " + @Translator.GetByKey("ProjectName");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main">
    <div class="container">

        <div class="row mb14">
            <div class="col-sm-8">

                <div class="oda-title search-result-text">
                    "<strong>@Html.Raw(Model.Tag)</strong>" @String.Format(Translator.GetByKey("TagResultText"), @Model.Data?.Count)
                </div>


                <div class="column-news-wrapper-big clearfix" id="divNews">

                    @if (Model.Data.HasValue())
                    {
                        foreach (var item in Model.Data)
                        {
                            <a href="@item.Url" class="news-item-link br5">
                                <div class="left rltv">
                                    <img src="@item.ImageUrl" class="img-responsive m0a" alt="@item.Title">
                                </div>
                                <div class="right">
                                    @*<div class="news-cat spor">SPOR</div>*@
                                    <div class="news-title">@item.Title</div>
                                </div>
                                <div class="clearfix"></div>
                            </a>
                        }
                    }

                </div>


            </div>
            <div class="col-sm-4">
                <!--right col-->
                @* Reklam Alanları:
                    <div class="mb14"><img src="http://placehold.it/300x600" class="img-responsive m0a"></div>

                    <div class="mb14"><img src="http://placehold.it/300x600" class="img-responsive m0a"></div>
                *@
                <!--right col end-->
            </div>
        </div>


    </div>

</section>