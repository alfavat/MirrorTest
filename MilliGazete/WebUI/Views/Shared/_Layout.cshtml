<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Site Title- -->
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="robots" content="index, follow">
    <meta name="author" content="milligazete.com.tr">
    <meta name="developer" content="logbase.com.tr">

    <link rel="shortcut icon" href="~/content/images/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="~/content/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/content/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/content/images/favicon-16x16.png">

    @RenderSection("SectionTop", false)

    @*<link rel="amphtml" href="@LayoutModel.WebMobileUIUrl" />*@

    <!-- CSS
    ==================================================== -->
    <link href="~/content/css/bootstrap-custom.css" rel="stylesheet">
    <link href="~/content/css/fonts.css" rel="stylesheet">
    <!--<link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap&subset=latin-ext" rel="stylesheet">-->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/content/css/jquery.sidr.bare.css" rel="stylesheet">
    <link href="~/content/css/font-awesome.css" rel="stylesheet">
    <link href="~/content/css/typeaheadjs.css" rel="stylesheet">
    <link href="~/content/css/slick.css" rel="stylesheet">
    <link href="~/content/css/slick-theme.css" rel="stylesheet">
    <link href="~/content/css/custom.css" rel="stylesheet">

</head>

<body>
    <section id="header">
        <div class="container">

            <div class="mobile-menu-toggler-wrapper visible-xs pull-left">
                <a class="mobile-menu-toggler" href="#mobile-menu">
                    <img src="~/content/images/ico-mobile-menu.png" width="24" alt="" class="icon">
                </a>
            </div>

            <span class="logo-wrapper"><a href="~/" class="milligazetelogo"><img src="~/content/images/milligazete-logo.png" width="45" height="45" alt="MilliGazete"></a></span>

            <ul class="navigation-list">
                @foreach (var item in LayoutModel.MenuItems)
                {
                    @if (!item.ChildrenMenuList.HasValue())
                    {
                        <li class=""><a href="~/@item.Url">@item.Title</a></li>
                    }
                    else
                    {
                        <li class="dropdown main-drop">
                            <a class="dropdown-toggle main-drop-toggle" href="javascript:;" data-toggle="dropdown">@item.Title <span class="caret"></span></a>
                            <ul class="dropdown-menu main-drop-menu">
                                @foreach (var subItem in item.ChildrenMenuList)
                                {
                                    <li class="col-sm-12">
                                        <a href="~/@subItem.Url">@subItem.Title</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                }
            </ul>

            <div class="top-social-wrapper">
                <a href="@LayoutModel.Option.Facebook" class="top-social"><img src="~/content/images/ico-facebook.png" width="24" height="24" alt=""></a>
                <a href="@LayoutModel.Option.Twitter" class="top-social"><img src="~/content/images/ico-twitter.png" width="24" height="24" alt=""></a>
                <a href="@LayoutModel.Option.Youtube" class="top-social"><img src="~/content/images/ico-youtube.png" width="24" height="24" alt=""></a>
                <a href="@LayoutModel.Option.Instagram" class="top-social"><img src="~/content/images/ico-instagram.png" width="24" height="24" alt=""></a>
            </div>

            <div class="top-search-but">
                <a href="#" onclick="$('.top-search-field').fadeIn('fast');$('.header-search-txtinp').focus();"><img src="~/content/images/ico-search.png" width="24" height="24" alt="@Translator.GetByKey("Search")"><span> @Translator.GetByKey("Search")</span></a>
                <div class="top-search-field">
                    <form class="header-search-form" method="get" action="~/haber">
                        <input type="text" class="header-search-txtinp form-control typeahead" name="ara" placeholder="@Translator.GetByKey("SearchDetail")">
                        <button class="header-search-but" type="submit">&nbsp;</button>
                    </form>
                </div>
            </div>


        </div>
    </section>
    @* Reklam Alanı:
        <!-- fixed skin banners for large screens -->
        <section class="skin-banner160">
            <div class="container rltv">
                <div class="skin-banner-left-160"><img src="http://placehold.it/160x600"></div>
                <div class="skin-banner-right-160"><img src="http://placehold.it/160x600"></div>
            </div>
        </section>
        <section class="skin-banner120">
            <div class="container rltv">
                <div class="skin-banner-left-120"><img src="http://placehold.it/120x600"></div>
                <div class="skin-banner-right-120"><img src="http://placehold.it/120x600"></div>
            </div>
        </section>
        <!-- fixed skin banners end -->
    *@

    @RenderBody()


    <section id="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-3 footer-c">
                    <div class="footer-h">@Translator.GetByKey("Contact")</div>
                    <span>@Translator.GetByKey("NewsCenter"): @LayoutModel.Option.Telephone </span>
                    <span>@Translator.GetByKey("Fax"): @LayoutModel.Option.Fax </span>
                    <span>@Translator.GetByKey("Email"): <a href="mailto:info@milligazete.com">@LayoutModel.Option.Email</a></span>
                </div>
                <div class="col-sm-6 col-md-3 footer-c">
                    <div class="footer-h">@Translator.GetByKey("Contact")</div>
                    <span><a href="~/sayfa/kunye">@Translator.GetByKey("Imprint")</a></span>
                    <span><a href="~/profilim">@Translator.GetByKey("MyAccount")</a></span>
                    <span><a href="~/sayfa/gizlilik-sozlesmesi">@Translator.GetByKey("ConfidentialityAgreementConditions")</a></span>
                </div>
                <div class="col-sm-6 col-md-3 footer-c">
                    <div class="footer-h">@Translator.GetByKey("MobileApplications")</div>
                    <span><a href="https://apps.apple.com/us/app/milligazete-mobil/id917422876"><img src="~/content/images/footer-appstore.gif" width="133" height="40" alt="" class="mb7"></a></span>
                    <span><a href="https://play.google.com/store/apps/details?id=com.milligazete.app&hl=tr"><img src="~/content/images/footer-playstore.gif" width="133" height="40" alt=""></a></span>
                </div>
                <div class="col-sm-6 col-md-3 footer-c">
                    <div class="footer-h">@Translator.GetByKey("Advertisement")</div>
                    <span>@Translator.GetByKey("Advertisement"): @LayoutModel.Option.AdPhone</span>
                    <span><a href="mailto:@LayoutModel.Option.AdEmail">@LayoutModel.Option.AdEmail</a></span>
                </div>
            </div>
            <div class="text-center">@Html.Raw(Translator.GetByKey("CopyRights"))</div>
        </div>
    </section>

    <a href="#" class="go-top"><i class="back-to-top" alt="Yukarı"></i></a>

    <!-- mobile menu -->
    <div id="mobile-overlay"></div>
    <div id="mobile-menu">
        <div class="mobile-menu-header clearfix">
            <a href="javascript:void(0);" id="mobile-menu-close"><img src="~/content/images/ico-close.png" width="24" alt=""></a>
            <a href="~/" class="mobile-menu-logo"><img src="~/content/images/milligazete-logo.png" width="45" alt="@Translator.GetByKey("ProjectName")"></a>
        </div>

        <ul class="black">
            @foreach (var item in LayoutModel.MenuItems)
            {
                @if (!item.ChildrenMenuList.HasValue())
                {
                    <li class=""><a href="~/@item.Url">@item.Title</a></li>
                }
                else
                {
                    <li>
                        <a href="javascript:void(0);" onclick="$(this).next().fadeIn(200);"><i class="fa fa-caret-right" aria-hidden="true"></i> @item.Title</a>

                        <div class="sidr mobile-sub-menu" style="display:none;">
                            <div class="mobile-menu-header clearfix" style="padding-bottom:0;">
                                <a href="javascript:void(0);" onclick="$(this).parents('.mobile-sub-menu').fadeOut(200);"><i class="fa fa-caret-left" aria-hidden="true"></i> @Translator.GetByKey("Previous")</a>
                            </div>
                            <ul>
                                @foreach (var subItem in item.ChildrenMenuList)
                                {
                                    <li><a href="~/@subItem.Url">@subItem.Title</a></li>
                                }
                            </ul>
                        </div>

                    </li>

                }
            }
        </ul>
        <div class="social">
            <a href="@LayoutModel.Option.Facebook" target="_blank"><img src="~/content/images/ico-facebook.png" width="24" alt="Facebook"></a>
            <a href="@LayoutModel.Option.Twitter" target="_blank"><img src="~/content/images/ico-twitter.png" width="24" alt="Twitter"></a>
            <a href="@LayoutModel.Option.Youtube" target="_blank"><img src="~/content/images/ico-youtube.png" width="24" alt="Youtube"></a>
            <a href="@LayoutModel.Option.Instagram" target="_blank"><img src="~/content/images/ico-instagram.png" width="24" alt="Instagram"></a>
        </div>
        <div class="apps">
            <div class="mb14"><a href="https://apps.apple.com/us/app/milligazete-mobil/id917422876"><img src="~/content/images/footer-appstore.gif" width="133" height="40" alt=""></a></div>
            <div><a href="https://play.google.com/store/apps/details?id=com.milligazete.app&hl=tr"><img src="~/content/images/footer-playstore.gif" width="133" height="40" alt=""></a></div>
        </div>
    </div>

    <script src="~/scripts/lib/jquery.min.js"></script>
    <script src="~/scripts/lib/bootstrap.min.js"></script>
    <script src="~/scripts/lib/jquery.sidr.js"></script>
    <script src="~/scripts/lib/slick.js"></script>
    <script src="~/scripts/custom/custom.js"></script>
    <script src="~/scripts/lib/typeahead.bundle.js"></script>

    @RenderSection("SectionBottom", false)

</body>

</html>