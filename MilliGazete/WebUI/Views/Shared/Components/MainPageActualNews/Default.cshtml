@model List<MainPageCategoryNewsDto>

@if (Model.HasValue())
{
    <div class="container mt-3">
        <div class="col-md-12 bg-actual">
            <div class="row">
                <div class="col-md-12">
                    <div class="decorated-title text-white"><a href="~/gundem" class="link link-white" target="_blank">@Translator.GetByKey("Actual")</a></div>
                </div>
            </div>
            <div class="row">

                <div class="col-md-9">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <a href="@item.Url" class="col-md-4 news-list" target="_blank">
                                <img src="@item.ImageUrl" alt="@item.Title" />
                                <span class="news-list-title">@item.Title</span>
                            </a>
                        }
                    </div>
                </div>
                <div class="col-md-3">
                    @await Component.InvokeAsync("MainPageMostViewedNews")
                </div>

            </div>
        </div>
    </div>
}
