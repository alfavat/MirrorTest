@model List<MainPageCategoryNewsDto>

@if (Model.HasValue() && Model.Count>=6)
{
    <div class="container mt-3">
        <div class="col-md-12 bg-sport">
            <div class="row">
                <div class="col-md-12">
                    <div class="decorated-title text-white"><a href="~/spor" class="link link-white" target="_blank">@Translator.GetByKey("Sports")</a></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="row" style="margin-bottom: -10px !important;">

                        <a href="@Model[0].Url" class="col-md-6 news-list-wide">
                            <img src="@Model[0].ImageUrl" class="img-fluid" alt="@Model[0].Title" style="height:180px !important" />
                            <div class="title">@Model[0].Title</div>
                        </a>

                        <a href="@Model[1].Url" class="col-md-6 news-list-wide">
                            <img src="@Model[1].ImageUrl" class="img-fluid" alt="@Model[1].Title" style="height:180px !important" />
                            <div class="title">@Model[1].Title</div>
                        </a>

                    </div>
                    <div class="row">

                        <a href="@Model[2].Url" class="col-md-3 news-list" target="_blank">
                            <img src="@Model[2].ImageUrl" alt="@Model[2].Title" />
                            <span class="news-list-title">@Model[2].Title</span>
                        </a>

                        <a href="@Model[3].Url" class="col-md-3 news-list" target="_blank">
                            <img src="@Model[3].ImageUrl" alt="@Model[3].Title" />
                            <span class="news-list-title">@Model[3].Title</span>
                        </a>

                        <a href="@Model[4].Url" class="col-md-3 news-list" target="_blank">
                            <img src="@Model[4].ImageUrl" alt="@Model[4].Title" />
                            <span class="news-list-title">@Model[4].Title</span>
                        </a>

                        <a href="@Model[5].Url" class="col-md-3 news-list" target="_blank">
                            <img src="@Model[5].ImageUrl" alt="@Model[5].Title" />
                            <span class="news-list-title">@Model[5].Title</span>
                        </a>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="bg-white text-center" style="margin-top: 10px !important;margin-right: 10px; width: 300px; height: 250px !important; bottom: 0 !important;">Reklam Alanı<br><br>(300x250)</div><br>
                    <div class="col-md-12 bg-white" style="width:300px;height:75px;">
                        <a href="javascript:;" class="row sport-link">
                            <div class="col-md-7" style="padding-top: 5px;">
                                @Translator.GetByKey("Standings")
                            </div>
                            <div class="col-md-5 text-right">
                                <img src="images/super-lig-dummy.png" style="width:100px;">
                            </div>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
