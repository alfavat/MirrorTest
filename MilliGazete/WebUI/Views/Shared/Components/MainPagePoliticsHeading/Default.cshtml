@model List<MainHeadingDto>

<div class="container mt-3">
    <div class="col-md-12 bg-politics">
        <div class="row">
            <div class="col-md-12">
                <div class="decorated-title"><a href="~/siyaset" class="link link-white" target="_blank">@Translator.GetByKey("Politics")</a></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 politics-slider-wrapper">
                <div class="swiper-container swiper-container-bottom2" style=" max-height: 330px !important;">
                    <div class="swiper-pagination-bottom2"></div>
                    <div class="swiper-wrapper" style="margin-left:60px;">
                        @if (Model.HasValue())
                        {
                            var i = 1;
                            @foreach (var item in Model)
                            {
                                <a href="@item.Url" id="politicsSlider_@i" class="swiper-slide politics-slider-item" target="_blank">
                                    @if (item.UseTitle)
                                    {
                                        <div class="politics-slider-item-title">@item.Title</div>
                                    }
                                    <img src="@item.ImageUrl" alt="@item.Title" style="height:330px;width:100%;" />
                                </a>
                                i++;
                            }
                        }
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>