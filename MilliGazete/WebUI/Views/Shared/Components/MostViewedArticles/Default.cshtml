@model List<ArticleDto>

    <style>
        .author-box {
            margin-bottom: 20px;
            text-decoration: none !important;
            color: #555 !important;
        }

            .author-box:hover {
                text-decoration: none !important;
                color: #000 !important;
            }

            .author-box .card-block {
                padding: 10px;
            }

            .author-box .card-text {
                overflow: hidden;
                text-overflow: ellipsis;
                -webkit-box-orient: vertical;
                -webkit-line-clamp: 2;
                display: -webkit-box;
            }
    </style>
@if (Model.HasValue())
{
    foreach (var item in Model)
    {
        <a href="~/yazar/@item?.Author?.NameSurename.ToUrlFormat()" class="col-md-3 col-6 author-box">
            <div class="card">
                <img class="card-img-top" src="@item?.Author?.PhotoFile?.FileName" style="width:100%;height:220px;" />
                <div class="card-block">
                    <h4 class="card-title">@item?.Author?.NameSurename</h4>
                    <div class="card-text">
                        @item?.Author?.LastArticleTitle
                    </div>
                </div>
            </div>
        </a>
    }
}