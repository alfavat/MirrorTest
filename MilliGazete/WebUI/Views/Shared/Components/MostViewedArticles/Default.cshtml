@model List<ArticleDto>

@if (Model.HasValue())
{
    foreach (var item in Model)
    {
        <div class="col-md-3 author-card">
            <div class="card card-profile">
                <div class="card-avatar">
                    <a href="~/yazar/@item?.Author?.Url" target="_blank">
                        <img class="img" src="@item?.Author?.PhotoFile?.FileName">
                    </a>
                </div>
                <div class="card-body ">
                    <div class="card-title-box">
                        <a href="~/yazar/@item?.Author?.Url" class="card-title">@item?.Author?.NameSurename</a>
                    </div>
                    <div class="card-description-box">
                        <a href="@item.Url" class="card-description" target="_blank">
                            @item.Title
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}