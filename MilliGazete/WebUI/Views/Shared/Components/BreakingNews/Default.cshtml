@model List<BreakingNewsDto>

    <div class="container">
        <div class="row breaking-news-bg">
            <div class="col-md-2 breaking-news-title">
                <div class="mt-3">@Translator.GetByKey("BreakingNews")</div>
            </div>
            <div class="col-md-10">
                <div class="mt-3">
                    <ul class="breaking-news-ticker">
                        @if (Model.HasValue())
                        {
                            @foreach (var item in Model)
                            {
                                <li><a href="@item.Url">@item.Title</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>