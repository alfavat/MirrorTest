@model List<SubHeadingDto>
<div class="swiper-container swiper-container-sub" style="background-color: #fff; border: 1px solid #b5b5b5; ">
    <div class="swiper-wrapper">
        @if (Model.HasValue())
        {
            @foreach (var item in Model)
            {
                <a href="@item.Url" class="swiper-slide sub-heading-link" style="position: relative;" target="_blank">
                    <div class="badge badge-success" style="position: absolute;top:10px;left:10px;font-size:16px;">@Translator.GetByKey("Sports")</div>
                    <img src="@item.ImageUrl" class="img-fluid" style="width: 100% !important; height: auto !important;"  alt="@item.Title" />
                    <div class="title">@item.Title</div>
                </a>
            }
        }

    </div>
    <div class="swiper-button-prev swiper-button-prev-sub"></div>
    <div class="swiper-button-next swiper-button-next-sub"></div>

    <div class="swiper-pagination swiper-pagination-sub" style="margin-top:5px;margin-bottom: 5px;"></div>
</div>
