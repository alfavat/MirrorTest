<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Site Title- -->
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="robots" content="index, follow">
    <meta name="author" content="milligazete.com.tr">
    <meta name="developer" content="logbase.com.tr">

    @RenderSection("SectionTop", false)

    @*<link rel="canonical" href="@LayoutModel.WebUIUrl" />*@

    <!-- CSS
    ==================================================== -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/css/owlcarousel.min.css">
    <!-- Slider -->
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css">
    <!-- Story -->
    <link rel="stylesheet" href="~/css/story.min.css">
    <!-- Story Skin -->
    <link rel="stylesheet" href="~/css/story.skin.min.css">
    <!-- Breaking News -->
    <link href="~/css/breaking-news-ticker.css" rel="stylesheet" />
    <!-- Style -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <nav class="navbar navbar-light bg-light">
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#mainMenu" aria-controls="mainMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a href="~/" class="navbar-brand"><img src="~/images/logo/logo.png" class="img-fluid main-logo"></a>
        <a href="~/canli-yayin"><img src="~/images/icon/icon_streaming.png" class="img-fluid streaming-logo"></a>

        <div class="navbar-collapse collapse" id="mainMenu">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/">@Translator.GetByKey("newsList")</a>
                </li>
                @foreach (var item in LayoutModel.MenuItems)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="~/@item.Url">@item.MenuName</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" href="~/profilim"><i class="fa fa-user"></i> @Translator.GetByKey("myProfile")</a>
                </li>
            </ul>
            <form action="~/haber" class="form-inline my-2 my-md-0">
                <input class="form-control" type="text" placeholder="Haberlerde arayın" aria-label="Ara" name="ara">
            </form>
        </div>
    </nav>

    @RenderBody()

    <div class="bottom-navbar">
        @if (Context.Request.Path.ToString() == "" || Context.Request.Path.ToString() == "/" || Context.Request.Path.ToString() == "/index" || Context.Request.Path.ToString() == "/index.html")
        {
            <a href="~/" class="menu1-active">@Translator.GetByKey("newsList")</a>
        }
        else
        {
            <a href="~/" class="menu1">@Translator.GetByKey("newsList")</a>
        }

        @if (Context.Request.Path.ToString() == "/yazarlar")
        {
            <a href="/yazarlar" class="menu2-active">@Translator.GetByKey("authors")</a>
        }
        else
        {
            <a href="/yazarlar" class="menu2">@Translator.GetByKey("authors")</a>
        }

        @if (Context.Request.Path.ToString() == "/video" || Context.Request.Path.ToString() == "/video-galeri")
        {
            <a href="~/video" class="menu3-active">@Translator.GetByKey("video")</a>
        }
        else
        {
            <a href="~/video" class="menu3">@Translator.GetByKey("video")</a>
        }

        @if (Context.Request.Path.ToString() == "/foto" || Context.Request.Path.ToString() == "/foto-galeri")
        {
            <a href="~/foto-galeri" class="menu4-active">@Translator.GetByKey("photoGallery")</a>
        }
        else
        {
            <a href="~/foto-galeri" class="menu4">@Translator.GetByKey("photoGallery")</a>
        }


    </div>

    <!-- javaScript Files
    =============================================================================-->
    <!-- AMP -->
    @*<script async src="https://cdn.ampproject.org/v0.js"></script>*@
    <!-- initialize jQuery Library -->
    <script src="~/js/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="~/js/popper.min.js"></script>
    <!-- Bootstrap jQuery -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Owl Carousel -->
    <script src="~/js/owl-carousel.2.3.0.min.js"></script>
    <!-- slider -->
    <script src="~/js/swiper-bundle.min.js"></script>
    <!-- Story -->
    <script src="~/js/story.min.js"></script>
    <!-- Story Main -->
    <script src="~/js/story.main.js"></script>
    <!-- Breaking News -->
    <script src="~/js/breaking-news-ticker.js"></script>
    <!-- Main -->
    <script src="~/js/main.js?v=1"></script>

    @RenderSection("SectionBottom", false)
</body>
</html>
