@model List<MainPageCategoryNewsDto>

<div class="container">
    <div class="row">

        @if (Model != null && Model.Count >= 1)
        {
            @foreach (var item in Model)
            {
                <a href="@item.Url" class="col-11 news-card">
                    <img src="@item.ImageUrl" class="img-fluid" alt="@item.Title">
                    <h2>
                        @item.Title
                    </h2>
                </a>
            }
        }
    </div>
</div>