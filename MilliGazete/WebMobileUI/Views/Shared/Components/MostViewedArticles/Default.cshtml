@model List<ArticleDto>

<style>
    .author-image{
        height:225px;
    }
</style>
<link href="~/css/owlcarousel.min.css" rel="stylesheet" />
<script src="~/js/owl-carousel.2.3.0.min.js"></script>
@if (Model.HasValue())
{
    <div class="ts-grid-box mb-30">
        <h2 class="ts-title">@Translator.GetByKey("mostPopular")</h2>
        <div class="most-populers owl-carousel">
            @foreach (var item in Model)
            {
                <div class="item">
                    <a class="post-cat ts-yellow-bg" href="/yazar/@item?.Author?.NameSurename">@item?.Author?.NameSurename</a>
                    <div class="ts-post-thumb">
                        <a href="/yazar/@item?.Author?.NameSurename.ToUrlFormat()">
                            <img class="img-fluid author-image" src="@item?.Author?.PhotoFile?.FileName" alt="@item?.Author?.PhotoFile?.FileName">
                        </a>
                    </div>
                    <div class="post-content">
                        <h3 class="post-title">
                            <a href="@item.Url.ToUrlFormat()">@item?.Title</a>
                        </h3>
                        <span class="post-date-info">
                            <i class="fa fa-clock-o"></i>
                           @item?.CreatedAt.ToString("dd/MM/yyyy")
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
}